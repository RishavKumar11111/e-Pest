<div class="right_col" role="main" ng-controller="myJDAPPVAWDetailsCtrl" ng-init="getDistricts();" style="min-height: 100vh">   
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Block-wise VAW Details</h3>
            </div>
            <div class="title_right">
                <!-- <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div> -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="col-md-2 col-sm-2 col-xs-12"></div>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <div class="form-group">
                                    <label style="text-align: left; padding-top: 8px" class="control-label col-md-5 col-sm-5 col-xs-12">Select District <span style="color: red">*</span></label>
                                    <div class="form-group input-group col-md-7 col-sm-7 col-xs-12" style="text-align: left">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                        <select class="form-control" ng-model="ddlDistrict" ng-options="i.DistrictCode as i.DistrictName for i in districts" ng-change="getBlocksByDistrict()" required>
                                            <option value="" disabled>Select District</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left; padding-top: 8px" class="control-label col-md-5 col-sm-5 col-xs-12">Select Block <span style="color: red">*</span></label>
                                    <div class="form-group input-group col-md-7 col-sm-7 col-xs-12" style="text-align: left">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                        <select class="form-control" ng-model="ddlBlock" ng-options="i.BlockCode as i.BlockName for i in blocks" ng-change="getVAWDetails()" required>
                                            <option value="" disabled>Select Block</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-12"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal table table-responsive" ng-show="vawDetails.length > 0">
                            <input type="button" class="btn btn-info" value="Print" ng-click="print()" style="margin-bottom: 10px; float: right" />
                            <table id="tblVD" class="table table-hover table-striped jambo_table bulk_action text-center">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title text-center">Serial No.</th>
                                        <th class="column-title text-center">VAW Code</th>
                                        <th class="column-title text-center">VAW Name</th>
                                        <th class="column-title text-center">Mobile Number</th>
                                        <th class="column-title text-center">VAW Details</th>
                                    </tr>
                                </thead>
                                <tr ng-repeat="(key, value) in vawDetails | orderBy: 'VAWCode' | groupBy: 'VAWCode'">
                                    <td style="vertical-align: middle">{{$index + 1}}</td>
                                    <td style="vertical-align: middle">{{key}}</td>
                                    <td style="vertical-align: middle">{{value[0].VAWName}}</td>
                                    <td style="vertical-align: middle">{{value[0].VAWMobileNo}}</td>
                                    <td>
                                        <table class="table table-hover table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <td><b>Serial No.</b></td>
                                                    <td><b>GP Name</b></td>
                                                    <td><b>Status</b></td>
                                                </tr>
                                            </thead>
                                            <tr ng-repeat="i in value | orderBy: 'GPName'">
                                                <td>{{$index + 1}}</td>
                                                <td>{{i.GPName | capitalize}}</td>
                                                <td>{{i.Status == 1 ? 'Assigned' : 'Unassigned'}}</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div ng-show="vawDetails.length == 0" style="text-align: center">
                            <span colspan="5" style="color: red"><b>No records are found.</b></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>