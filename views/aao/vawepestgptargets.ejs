<div class="right_col" role="main" ng-controller="myVAWEGTCtrl" ng-init="month(); getFinancialYear(); getRegisteredVAWs(); getAllocatedGPsVAWs()" style="min-height: 100vh">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>GP Targets for VAW under e-Pest</h3>
            </div>
            <div class="title_right">
                <!-- <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div> -->
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Select GP(s) for VAWs <small>(Season-wise)</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form class="form-horizontal" role="form" name="ePestVAWGPForm" ng-submit="submitEPestVAWGPs(ePestVAWGPForm.$valid)" autocomplete="off" novalidate>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                                <div class="col-md-4 col-sm-4 col-xs-12" style="text-align: left">
                                    <div class="form-group">
                                        <label style="text-align: left; white-space: nowrap" class="control-label col-md-3 col-sm-3 col-xs-12">Season :</label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 7px">
                                                <input type="radio" name="season" ng-model="rbSeason" value="Kharif" disabled required />
                                                <label>Kharif</label>
                                            </div>
                                            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 7px">
                                                <input type="radio" name="season" ng-model="rbSeason" value="Rabi" disabled required />
                                                <label>Rabi</label>
                                            </div>
                                            <div class="has-error" ng-show="ePestVAWGPForm.$submitted || ePestVAWGPForm.season.$touched" style="color:red">
                                                <span ng-show="ePestVAWGPForm.season.$error.required">This is a required field</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <label style="text-align: right; padding-top: 10px" class="control-label col-md-6 col-sm-6 col-xs-12">Financial Year :</label>
                                    <label style="text-align: right; padding-top: 10px" class="control-label col-md-6 col-sm-6 col-xs-12">{{fiscalYear}}</label>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                                <div class="col-md-8 col-sm-8 col-xs-12" style="text-align: center">
                                    <div class="form-group">
                                        <label style="text-align: left; padding-top: 7px" class="control-label col-md-5 col-sm-5 col-xs-12">VAW Code <span style="color: red">*</span></label>
                                        <div class="col-md-7 col-sm-7 col-xs-12">
                                            <div class="input-group" style="margin-bottom: 0px">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                                <select class="form-control" name="vawCode" ng-model="ddlVAWCode" ng-options="i.VAWCode for i in registeredVAWs | unique:'VAWCode'" ng-change="getRegisteredVAWDetails(ddlVAWCode.VAWCode)" required>
                                                    <option value="" disabled>Select VAW Code</option>
                                                </select>
                                            </div>
                                            <div class="has-error" ng-show="ePestVAWGPForm.$submitted || ePestVAWGPForm.vawCode.$touched" style="color:red">
                                                <span ng-show="ePestVAWGPForm.vawCode.$error.required">This is a required field</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                                <div ng-show="registeredVAWDetails.length > 0">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label style="text-align: left; padding-top: 7px" class="control-label col-md-6 col-sm-6 col-xs-12">VAW Name :</label>
                                        <label style="text-align: left; padding-top: 7px" class="control-label col-md-6 col-sm-6 col-xs-12">{{registeredVAWDetails[0].VAWName}}</label>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label style="text-align: left; padding-top: 7px" class="control-label col-md-7 col-sm-7 col-xs-12">VAW Mobile No. :</label>
                                        <label style="text-align: left; padding-top: 7px" class="control-label col-md-5 col-sm-5 col-xs-12">{{registeredVAWDetails[0].VAWMobileNo}}</label>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12" ng-show="registeredVAWDetails.length > 0">
                                <fieldset>
                                    <legend>GP(s) assigned to {{registeredVAWDetails[0].VAWCode}}</legend>
                                    <div class="form-group">
                                        <div class="col-md-3 col-sm-3 col-xs-12" ng-repeat="i in registeredVAWDetails">
                                            <input style="margin: 5px" type="checkbox" ng-model="i.selected" ng-change="getValue()" ng-true-value="true" ng-false-value="false" />
                                            <label style="padding: 0 25px 0 0; font-weight: normal" class="control-label">{{i.GPName | capitalize}}</label>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="clearfix"></div>
                            <div class="ln_solid"></div>
                            <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                                <input type="submit" class="btn btn-success" value="Allocate GPs for Targets" ng-disabled="ePestVAWGPForm.$invalid" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Allocated GPs for VAW(s)</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-group">
                        <div class="row" ng-show="allocatedGPsVAWs.length > 0">
                            <div class="form-group" style="text-align: center">
                                <div class="table table-responsive">
                                    <table class="table table-hover table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <td><b>Serial No.</b></td>
                                                <td><b>VAW Code</b></td>
                                                <td><b>VAW Name</b></td>
                                                <td><b>VAW Mobile No.</b></td>
                                                <td><b>VAW Details</b></td>
                                            </tr>
                                        </thead>
                                        <tr ng-repeat="(key, value) in allocatedGPsVAWs | groupBy: 'VAWCode'">
                                            <td style="vertical-align: middle">{{$index + 1}}</td>
                                            <td style="vertical-align: middle">{{key}}</td>
                                            <td style="vertical-align: middle">{{value[0].VAWName}}</td>
                                            <td style="vertical-align: middle">{{value[0].VAWMobileNo}}</td>
                                            <td>
                                                <table class="table table-hover table-striped jambo_table bulk_action">
                                                    <thead>
                                                        <tr class="headings">
                                                            <td><b>Serial No.</b></td>
                                                            <td><b>GP Name</b></td>
                                                        </tr>
                                                    </thead>
                                                    <tr ng-repeat="i in value">
                                                        <td>{{$index + 1}}</td>
                                                        <td>{{i.GPName | capitalize}}</td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row" ng-show="allocatedGPsVAWs.length == 0">
                            <label style="color: darkred; text-align: justify" class="control-label">None of the VAWs are allocated to their GPs Targets.</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>