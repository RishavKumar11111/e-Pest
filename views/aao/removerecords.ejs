<div class="right_col" role="main" ng-controller="myAAORRCtrl" ng-init="getReferenceNos()" style="min-height: 100vh">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Remove Pest Records</h3>
            </div>
            <div class="title_right">
                <!-- <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div> -->
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Remove Reference No. & their details <small>(wrongly entered by VAW)</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal table table-responsive">
                            <table class="table table-hover table-striped jambo_table bulk_action text-center">
                                <thead>
                                    <tr class="headings">
                                        <td>Serial No.</td>
                                        <td>Reference No.</td>
                                        <td>View Crop Details</td>
                                        <td>View Photo & Location Details</td>
                                        <td>View Pest Details</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tr ng-repeat="i in referenceNos">
                                    <td style="vertical-align: middle">{{$index+1}}</td>
                                    <td style="vertical-align: middle">{{i.ReferenceNo}}</td>
                                    <td style="vertical-align: middle"><input type="button" class="btn btn-sm btn-primary" value="View Crop Details" ng-click="getCD(i.ReferenceNo)" data-toggle="modal" data-target="#CDModal" /></td>
                                    <td style="vertical-align: middle"><input type="button" class="btn btn-sm btn-primary" value="View Photo & Location Details" ng-click="getPLD(i.ReferenceNo)" data-toggle="modal" data-target="#PLDModal" /></td>
                                    <td style="vertical-align: middle"><input type="button" class="btn btn-sm btn-primary" value="View Pest Details" ng-click="getPD(i.ReferenceNo)" data-toggle="modal" data-target="#PDModal" /></td>
                                    <td style="vertical-align: middle"><input type="button" class="btn btn-sm btn-danger" value="Remove" ng-click="removeRefNo(i.ReferenceNo)" /></td>
                                </tr>
                                <tr ng-if="referenceNos.length == 0">
                                    <td colspan="6" style="text-align: center; color: red"><b>No Records are found.</b></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="CDModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-center">Crop Details Section</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row" ng-show="cd != null">
                            <div class="col-md-1 col-sm-1 col-xs-12"></div>
                            <div class="form-horizontal col-md-10 col-sm-10 col-xs-12">
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Reference No. :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.ReferenceNo}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">GP :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.GPName | capitalize}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Village :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.VillageName | capitalize}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left; padding-top: 8px" class="control-label col-md-6 col-sm-6 col-xs-12">Mobile No. :</label>
                                    <label style="text-align: left; padding-top: 8px" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.MobileNo}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Season :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.Season}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Crop Category :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.CategoryName}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Crop :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.CropName}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Crop Stage :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{cd.CropStageName}}</label>
                                </div>
                            </div>
                            <div class="col-md-1 col-sm-1 col-xs-12"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="PLDModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-center">Photo & Location Details Section</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row" ng-show="pld != null">
                            <div class="form-horizontal">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label style="text-align: left" class="control-label col-md-4 col-sm-4 col-xs-12">Reference No. :</label>
                                    <label style="text-align: left" class="control-label col-md-4 col-sm-4 col-xs-12">{{pld.ReferenceNo}}</label>
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12"></label>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label style="text-align: left" class="control-label col-md-4 col-sm-4 col-xs-12">1st Land Photo :</label>
                                    <img id="flp" class="col-md-5 col-sm-5 col-xs-12" />
                                    <div class="col-md-3 col-sm-3 col-xs-12">
                                        <label class="control-label">Latitude: {{pld.FixedLandLatitude}}</label>
                                        <label class="control-label">Longitude: {{pld.FixedLandLongitude}}</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label style="text-align: left" class="control-label col-md-4 col-sm-4 col-xs-12">2nd Land Photo :</label>
                                    <div ng-show="pld.RLP1 != null">
                                        <img id="rlp1" class="col-md-5 col-sm-5 col-xs-12" />
                                    </div>
                                    <div ng-show="pld.RLP1 == null" style="padding-top: 8px" class="col-md-5 col-sm-5 col-xs-12"><b>NA</b></div>
                                    <div class="col-md-3 col-sm-3 col-xs-12">
                                        <label class="control-label">Latitude: {{pld.RandomLandLatitude1 == null ? 'NA' : pld.RandomLandLatitude1}}</label>
                                        <label class="control-label">Longitude: {{pld.RandomLandLongitude1 == null ? 'NA' : pld.RandomLandLongitude1}}</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label style="text-align: left" class="control-label col-md-4 col-sm-4 col-xs-12">3rd Land Photo :</label>
                                    <div ng-show="pld.RLP2 != null">
                                        <img id="rlp2" class="col-md-5 col-sm-5 col-xs-12" />
                                    </div>
                                    <div ng-show="pld.RLP2 == null" style="padding-top: 8px" class="col-md-5 col-sm-5 col-xs-12"><b>NA</b></div>
                                    <div class="col-md-3 col-sm-3 col-xs-12">
                                        <label class="control-label">Latitude: {{pld.RandomLandLatitude2 == null ? 'NA' : pld.RandomLandLatitude2}}</label>
                                        <label class="control-label">Longitude: {{pld.RandomLandLongitude2 == null ? 'NA' : pld.RandomLandLongitude2}}</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="PDModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-center">Pest Details Section</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row" ng-show="pd != null">
                            <div class="col-md-1 col-sm-1 col-xs-12"></div>
                            <div class="form-horizontal col-md-10 col-sm-10 col-xs-12">
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Reference No.</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.ReferenceNo}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Pest Identified</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.InfectionIdentified}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Pest Name</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.PestDiseaseName}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Area of Land</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.AreaOfLand}} ha</label>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12" style="border-bottom: 1px dashed #cccccc">
                                    <label class="control-label">Area Affected (in Hectare) :---</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Low</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Moderate</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">High</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Total</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.LowIntensityAttackArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.MediumIntensityAttackArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.HighIntensityAttackArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{(pd.LowIntensityAttackArea -- pd.MediumIntensityAttackArea -- pd.HighIntensityAttackArea).toFixed(1)}} ha</label>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12" style="border-bottom: 1px dashed #cccccc">
                                    <label class="control-label">Area Treated (in Hectare) :---</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Low</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Moderate</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">High</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">Total</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.LowIntensityTreatedArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.MediumIntensityTreatedArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{pd.HighIntensityTreatedArea}} ha</label>
                                    <label style="text-align: left" class="control-label col-md-3 col-sm-3 col-xs-12">{{(pd.LowIntensityTreatedArea -- pd.MediumIntensityTreatedArea -- pd.HighIntensityTreatedArea).toFixed(1)}} ha</label>
                                </div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12" style="border-bottom: 1px dashed #cccccc">
                                    <label class="control-label">Pest Population / Nature of Damage :---</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Moderate :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.ModerateIntensityPestPopulation == null ? 'NA' : pd.ModerateIntensityPestPopulation}}</label>
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">High :</label>
                                    <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.HighIntensityPestPopulation == null ? 'NA' : pd.HighIntensityPestPopulation}}</label>
                                </div>
                                <div ng-show="pd.InfectionIdentified == 'Yes'">
                                    <div class="form-group" style="border-bottom: 1px dashed #cccccc">
                                        <label style="text-align: left" class="control-label col-md-12 col-sm-12 col-xs-12">Advisories :---</label>
                                    </div>
                                    <div class="form-group">
                                        <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">Moderate :</label>
                                        <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.AdvisoryModerate == null ? 'NA' : pd.AdvisoryModerate}}</label>
                                    </div>
                                    <div class="form-group">
                                        <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">High :</label>
                                        <label style="text-align: left" class="control-label col-md-6 col-sm-6 col-xs-12">{{pd.AdvisoryHigh == null ? 'NA' : pd.AdvisoryHigh}}</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 col-sm-1 col-xs-12"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>