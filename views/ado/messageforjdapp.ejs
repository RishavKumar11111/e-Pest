<div class="right_col" role="main" ng-controller="myADOMFJCtrl" ng-init="getMessages()" style="min-height: 100vh">   
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Message for JDA(PP)</h3>
            </div>
            <div class="title_right">
                <!-- <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div> -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Message for JDA(PP) <small>(in case of emergency conditions)</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form class="form-horizontal" role="form" name="adoMFJForm" ng-submit="submitADOMFJ(adoMFJForm.$valid)" autocomplete="off" novalidate>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon" style="padding: 6px 3px"><i class="glyphicon glyphicon-pencil"></i></span>
                                    <textarea rows="5" name="mfj" ng-model="taMFJ" placeholder="Enter the message for JDA(PP) for emergency pest condition" ng-trim="false" maxlength="300" style="width: 100%" required></textarea>
                                </div>
                                <p style="text-align: right">{{300 - taMFJ.length + ' characters remaining'}}</p>
                                <div class="has-error text-right" ng-show="adoMFJForm.$submitted || adoMFJForm.mfj.$touched" style="color:red">
                                    <span ng-show="adoMFJForm.mfj.$error.required">This is a required field</span>
                                </div>
                            </div>
                            <div class="form-group text-center col-md-12 col-sm-12 col-xs-12">
                                <button type="submit" class="btn btn-default" style="background: #2a5d1f; color: #ffffff">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Previous messages given to JDA(PP)</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal table table-responsive">
                            <table class="table table-hover table-striped jambo_table bulk_action text-center">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title text-center">Serial No.</th>
                                        <th class="column-title text-center">Message for JDA(PP)</th>
                                        <th class="column-title text-center">Sent Date</th>
                                    </tr>
                                </thead>
                                <tr ng-repeat="i in messages">
                                    <td style="vertical-align: middle">{{$index + 1}}</td>
                                    <td style="vertical-align: middle">{{i.Message}}</td>
                                    <td style="vertical-align: middle">{{i.Date}}</td>
                                </tr>
                                <tr ng-show="messages.length == 0">
                                    <td colspan="3" style="text-align: center; color: red"><b>No Records are found.</b></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>