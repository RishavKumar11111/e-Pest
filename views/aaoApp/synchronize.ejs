<div ng-controller="myAAOAppSyncCtrl" ng-init="checkDay(); reload();">
    <div id="top" class="container" style="text-align: center; padding-top: 70px">
        <div class="row">
            <div id="signup-form">
                <form class="form-horizontal" method="POST" role="form" name="syncForm" ng-submit="syncData(syncForm.$valid)" ng-init="randomNoInit('<%= randomNo %>')" autocomplete="off" novalidate>
                    <input type="hidden" name="_csrf" id="_csrf" value="<%=csrfToken %>">
                    <div class="row container">
                        <h3 style="text-align: center; padding-bottom: 30px" class="control-label col-lg-12 col-md-12 col-sm-12 col-xs-12"><b>Synchronize Data</b></h3>
                        <!-- <div class="form-group">
                            <label style="text-align: left; padding-top: 8px; white-space: nowrap" class="control-label col-lg-5 col-md-5 col-sm-5 col-xs-5">Enter Username <span style="color: red">*</span></label>
                            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                <input type="text" class="form-control" name="username" ng-model="txtUsername" placeholder="Enter Username" maxlength="30" required>
                                <div class="has-error" ng-show="syncForm.$submitted || syncForm.username.$touched" style="color:red">
                                    <span ng-show="syncForm.username.$error.required">This is a required field</span>
                                </div>
                            </div>
                        </div> -->
                        <div class="form-group">
                            <label style="text-align: left; padding-top: 8px; white-space: nowrap" class="control-label col-lg-5 col-md-5 col-sm-5 col-xs-5">Enter Password <span style="color: red">*</span></label>
                            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                <input id="pwd" type="password" class="form-control" name="password" ng-model="txtPassword" placeholder="Enter Password" maxlength="50" required>
                                <i class="glyphicon glyphicon-eye-open form-control-feedback" style="cursor: pointer; pointer-events: all; width: 68px"></i>
                                <div class="has-error" ng-show="syncForm.$submitted || syncForm.password.$touched" style="color:red">
                                    <span ng-show="syncForm.password.$error.required">This is a required field</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default" ng-disabled="syncForm.$invalid" style="background: #2a5d1f; color: #ffffff">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('#pwd + .glyphicon').on('click', function() {
        $(this).toggleClass('glyphicon-eye-close').toggleClass('glyphicon-eye-open');
        var x = document.getElementById("pwd");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    });
</script>