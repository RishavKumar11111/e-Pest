                                        <thead>
                                            <tr class="headings">
                                                <td style="vertical-align: middle"><b>Serial No.</b></td>
                                                <td style="vertical-align: middle"><b>GP</b></td>
                                                <td style="vertical-align: middle"><b>No. of Trapped Pests</b></td>
                                            </tr>
                                        </thead>
                                        <tr ng-repeat="i in ltcDetails | orderBy: 'GPName'">
                                            <td style="vertical-align: middle">{{$index + 1}}</td>
                                            <td style="vertical-align: middle">{{i.GPName | capitalize}}</td>
                                            <td style="vertical-align: middle">{{i.PestTrappedNo}}</td>
                                        </tr>
                                        <tr class="totalPTN">
                                            <td style="background: rgba(52,73,94,.94); color: #ECF0F1; vertical-align: middle" colspan="2"><b>Total Area (in HA)</b></td>
                                            <td>{{ptn}}</td>
                                        </tr>
                                    </table>
                                </div>
