<div class="right_col" role="main" ng-controller="myCDAOADReportCtrl" ng-init="getAAODetailsReport();" style="min-height: 100vh">   
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>AAO Details</h3>
            </div>
            <div class="title_right">
                <!-- <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div> -->
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <!-- <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li> -->
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal table table-responsive" ng-show="aaoDetails.length > 0">
                            <input type="button" class="btn btn-info" value="Print" ng-click="print()" style="margin-bottom: 10px; float: right" />
                            <table id="tblAD" class="table table-hover table-striped jambo_table bulk_action text-center">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title text-center">Serial No.</th>
                                        <th class="column-title text-center">AAO Name</th>
                                        <th class="column-title text-center">Mobile Number</th>
                                        <th class="column-title text-center">AAO Details</th>
                                    </tr>
                                </thead>
                                <tr ng-repeat="(key, value) in aaoDetails | orderBy: 'AAOName' | groupBy: 'AAOMobileNo'">
                                    <td style="vertical-align: middle">{{$index + 1}}</td>
                                    <td style="vertical-align: middle">{{value[0].AAOName}}</td>
                                    <td style="vertical-align: middle">{{key}}</td>
                                    <td>
                                        <table class="table table-hover table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <td><b>Serial No.</b></td>
                                                    <td><b>AAO Code</b></td>
                                                    <td><b>Block Name</b></td>
                                                </tr>
                                            </thead>
                                            <tr ng-repeat="i in value | orderBy: 'AAOCode'">
                                                <td>{{$index + 1}}</td>
                                                <td>{{i.AAOCode}}</td>
                                                <td>{{i.BlockName | capitalize}}</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div ng-show="aaoDetails.length == 0" style="text-align: center">
                            <span colspan="5" style="color: red"><b>No records are found.</b></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>